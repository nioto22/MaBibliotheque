<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.friends.home.FriendsHomeFragment"
    android:background="@color/background_third_taupe">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/large_20dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_20dp"
                android:layout_marginStart="@dimen/medium_12dp"
                android:layout_marginEnd="@dimen/medium_12dp"
                card_view:cardCornerRadius="@dimen/small_8dp"
                card_view:cardMaxElevation="@dimen/thin_2dp"
                android:elevation="2dp"
                android:background="@color/text_secondary_white">
                <RelativeLayout
                    android:id="@+id/homeFriendsFragmentFriendsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xs_4dp">
                    <RelativeLayout
                        android:id="@+id/homeFriendsFragmentFriendsTitleLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/small_8dp">
                        <TextView
                            android:id="@+id/homeFriendsFragmentFriendsTitleTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Amis : "
                            android:textColor="@color/text_primary_black"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/homeFriendsFragmentFriendsTitleNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/homeFriendsFragmentFriendsTitleTitle"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/text_primary_black"
                            android:textSize="18sp"/>
                        <RelativeLayout
                            android:id="@+id/homeFriendsFragmentFriendsSeeAllButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:focusable="true"
                            android:clickable="true">
                            <ImageView
                                android:id="@+id/homeFriendsFragmentFriendsSeeAllImage"
                                android:layout_width="@dimen/medium_12dp"
                                android:layout_height="@dimen/medium_12dp"
                                android:src="@drawable/ic_go_arrow_black"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/homeFriendsFragmentFriendsSeeAllTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/homeFriendsFragmentFriendsSeeAllImage"
                                android:layout_centerVertical="true"
                                android:text="@string/see_all"
                                android:textColor="@color/text_primary_black"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/homeFriendsFragmentFriendsNoFriends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_below="@+id/homeFriendsFragmentFriendsTitleLayout"
                        android:text="@string/home_friends_fragment_no_friend_text_view"
                        android:textSize="18sp"
                        android:visibility="gone"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/homeFriendsFragmentFriendsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/homeFriendsFragmentFriendsTitleLayout"
                        android:layout_marginStart="@dimen/small_8dp"
                        android:layout_marginEnd="@dimen/small_8dp"
                        android:orientation="horizontal"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_8dp"
                android:layout_marginStart="@dimen/medium_12dp"
                android:layout_marginEnd="@dimen/medium_12dp"
                card_view:cardCornerRadius="@dimen/small_8dp"
                card_view:cardMaxElevation="@dimen/thin_2dp"
                android:elevation="2dp"
                android:background="@color/text_secondary_white">
                <RelativeLayout
                    android:id="@+id/homeFriendsFragmentShareBooksLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xs_4dp">
                    <RelativeLayout
                        android:id="@+id/homeFriendsFragmentShareBooksTitleLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/small_8dp">
                        <TextView
                            android:id="@+id/homeFriendsFragmentShareBooksTitleTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Livres partagés : "
                            android:textColor="@color/text_primary_black"
                            android:textSize="18sp"
                            android:layout_marginEnd="@dimen/xs_4dp"/>
                        <TextView
                            android:id="@+id/homeFriendsFragmentShareBooksTitleNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/homeFriendsFragmentShareBooksTitleTitle"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/text_primary_black"
                            android:textSize="18sp"/>
                        <RelativeLayout
                            android:id="@+id/homeFriendsFragmentShareBooksSeeAllButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:focusable="true"
                            android:clickable="true">
                            <ImageView
                                android:id="@+id/homeFriendsFragmentShareBooksSeeAllImage"
                                android:layout_width="@dimen/medium_12dp"
                                android:layout_height="@dimen/medium_12dp"
                                android:src="@drawable/ic_go_arrow_black"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/homeFriendsFragmentShareBooksSeeAllTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/homeFriendsFragmentShareBooksSeeAllImage"
                                android:layout_centerVertical="true"
                                android:text="@string/see_all"
                                android:textColor="@color/text_primary_black"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/homeFriendsFragmentShareBooksNoBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_below="@+id/homeFriendsFragmentShareBooksTitleLayout"
                        android:text="Aucun livre partagé pour le moment !"
                        android:textSize="18sp"
                        android:visibility="gone"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/homeFriendsFragmentShareBooksRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/homeFriendsFragmentShareBooksTitleLayout"
                        android:layout_marginStart="@dimen/small_8dp"
                        android:layout_marginEnd="@dimen/small_8dp"
                        android:orientation="horizontal"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_8dp"
                android:layout_marginStart="@dimen/medium_12dp"
                android:layout_marginEnd="@dimen/medium_12dp"
                card_view:cardCornerRadius="@dimen/small_8dp"
                card_view:cardMaxElevation="@dimen/thin_2dp"
                android:elevation="2dp"
                android:background="@color/text_secondary_white">
                <RelativeLayout
                    android:id="@+id/homeFriendsFragmentDiscussionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/xs_4dp">
                    <RelativeLayout
                        android:id="@+id/homeFriendsFragmentDiscussionsTitleLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/small_8dp">
                        <TextView
                            android:id="@+id/homeFriendsFragmentDiscussionsTitleTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Discussions : "
                            android:textColor="@color/text_primary_black"
                            android:textSize="18sp"
                            android:layout_marginEnd="@dimen/xs_4dp"/>
                        <TextView
                            android:id="@+id/homeFriendsFragmentDiscussionsTitleNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/homeFriendsFragmentDiscussionsTitleTitle"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/text_primary_black"
                            android:textSize="18sp"/>
                        <RelativeLayout
                            android:id="@+id/homeFriendsFragmentDiscussionsSeeAllButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:focusable="true"
                            android:clickable="true">
                            <ImageView
                                android:id="@+id/homeFriendsFragmentDiscussionsSeeAllImage"
                                android:layout_width="@dimen/medium_12dp"
                                android:layout_height="@dimen/medium_12dp"
                                android:src="@drawable/ic_go_arrow_black"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/homeFriendsFragmentDiscussionsSeeAllTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/homeFriendsFragmentDiscussionsSeeAllImage"
                                android:layout_centerVertical="true"
                                android:text="@string/see_all"
                                android:textColor="@color/text_primary_black"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/homeFriendsFragmentDiscussionsNoMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_below="@+id/homeFriendsFragmentDiscussionsTitleLayout"
                        android:text="Aucune discussion pour le moment !"
                        android:textSize="18sp"
                        android:visibility="gone"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/homeFriendsFragmentDiscussionsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/homeFriendsFragmentDiscussionsTitleLayout"
                        android:layout_marginStart="@dimen/small_8dp"
                        android:layout_marginEnd="@dimen/small_8dp"
                        android:orientation="horizontal"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>




</RelativeLayout>