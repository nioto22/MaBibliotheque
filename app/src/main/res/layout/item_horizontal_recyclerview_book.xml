<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/thin_2dp">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/xs_4dp"
        card_view:cardMaxElevation="@dimen/thin_2dp"
        android:elevation="2dp"
        android:background="@color/background_third_taupe">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/xs_4dp"
            android:paddingBottom="@dimen/xs_4dp"
            android:paddingStart="@dimen/xs_4dp"
            android:paddingEnd="@dimen/xs_4dp"
            android:background="@color/background_third_taupe">
            <ImageView
                android:id="@+id/itemBookFrontCover"
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:contentDescription="@string/book_front_cover"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>