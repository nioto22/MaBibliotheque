<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.friends.friends.FriendsFragment"
    android:background="@color/background_third_taupe">

    <TextView
        android:id="@+id/friendsFragmentFriendsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="@string/friends_fragment_friends_title"
        android:textColor="@color/text_primary_black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="@dimen/medium_12dp"/>
    <TextView
        android:id="@+id/friendsFragmentNoFriendsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friendsFragmentFriendsTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/text_primary_black"
        android:gravity="center"
        android:text="@string/friends_fragment_no_friends"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendsFragmentFriendsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friendsFragmentFriendsTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/small_8dp"
        android:background="@color/background_third_taupe"
        android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/floating_button_margin_16dp"
        android:src="@drawable/ic_add_taupe"/>


</RelativeLayout>