<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/transparent"
    android:layout_marginBottom="@dimen/large_20dp">
    <ImageView
        android:id="@+id/itemDiscussionImageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="@dimen/small_8dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user_no_image"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_8dp"
        android:layout_marginBottom="@dimen/small_8dp"
        android:layout_marginEnd="@dimen/small_8dp"
        android:layout_toEndOf="@+id/itemDiscussionImageView"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/itemDiscussionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/itemDiscussionDate"
            android:textColor="@color/text_primary_black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/small_8dp"
            android:layout_marginStart="@dimen/xs_4dp"
            android:layout_marginEnd="@dimen/xs_4dp"
            android:layout_marginBottom="@dimen/xs_4dp"/>
        <TextView
            android:id="@+id/itemDiscussionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/itemDiscussionTitle"
            android:textColor="@color/text_dark_gray"
            android:gravity="center"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/small_8dp"
            android:layout_marginEnd="@dimen/xs_4dp"/>
        <TextView
            android:id="@+id/itemDiscussionLastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemDiscussionTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/xs_4dp"
            android:layout_marginBottom="@dimen/xs_4dp"
            android:layout_marginStart="@dimen/small_8dp"
            android:layout_marginEnd="@dimen/small_8dp"
            android:textColor="@color/text_dark_gray"
            android:textStyle="normal"
            android:gravity="start"
            android:maxLines="1"
            android:ellipsize="end"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/itemDiscussionNewMessageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/itemDiscussionImageView"
        android:layout_alignEnd="@+id/itemDiscussionImageView"
        android:src="@drawable/ic_new_message"/>


</RelativeLayout>































